<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <View
        android:id="@+id/title2_view"
        android:background="@color/colorPrimaryDark"
        android:layout_height="40dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/activity_title2_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="활동"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/title2_view"
        app:layout_constraintTop_toTopOf="@id/title2_view"
        app:layout_constraintBottom_toBottomOf="@id/title2_view"
        app:layout_constraintRight_toLeftOf="@id/percent_title_txt"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/percent_title_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="적립 숨"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/activity_title2_txt"
        app:layout_constraintTop_toTopOf="@id/title2_view"
        app:layout_constraintBottom_toBottomOf="@id/title2_view"
        app:layout_constraintRight_toRightOf="@id/title2_view"
        android:gravity="center"
        />

</android.support.constraint.ConstraintLayout>