<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackgroundColor">

    <View
        android:id="@+id/container_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_style"/>

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/container_view"
        app:layout_constraintTop_toTopOf="@id/container_view"
        app:layout_constraintBottom_toBottomOf="@id/container_view"
        app:layout_constraintRight_toLeftOf="@id/method_txt"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/method_txt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/date_txt"
        app:layout_constraintTop_toTopOf="@id/container_view"
        app:layout_constraintRight_toLeftOf="@+id/mileage_txt"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/mileage_txt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/method_txt"
        app:layout_constraintTop_toTopOf="@id/container_view"
        app:layout_constraintRight_toLeftOf="@+id/activity_txt"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/activity_txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/mileage_txt"
        app:layout_constraintTop_toTopOf="@id/container_view"
        app:layout_constraintRight_toRightOf="@+id/container_view"
        app:layout_constraintBottom_toBottomOf="@+id/container_view"
        android:gravity="center"
        />
