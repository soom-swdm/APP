<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:background="#8FFFFFFF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider2">

    </LinearLayout>

    <ImageView
        android:id="@+id/cur_level_image"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:src="@drawable/level1_seed"
        app:layout_constraintEnd_toStartOf="@+id/username_txtview"
        app:layout_constraintTop_toTopOf="@+id/username_txtview" />

    <ImageView
        android:id="@+id/circle_image"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/next_level_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_txtview" />

    <TextView
        android:id="@+id/cur_soom_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text=""
        android:textColor="#E658595B"
        android:textSize="45sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/circle_image"
        app:layout_constraintLeft_toLeftOf="@id/circle_image"
        app:layout_constraintRight_toRightOf="@id/circle_image"
        app:layout_constraintTop_toTopOf="@id/circle_image" />

    <LinearLayout
        android:id="@+id/next_level_layout"
        android:layout_width="381dp"
        android:layout_height="26dp"
        android:orientation="horizontal"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_image">

        <TextView
            android:id="@+id/next_level_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="다음 등급까지"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_level_image"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/level2_leaf" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/menu_layout"
        android:layout_width="405dp"
        android:layout_height="158dp"
        android:stretchColumns="0,1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintVertical_bias="0.065">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/history_btn2"
                android:layout_width="87dp"
                android:layout_height="90dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/welcome"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/smsoom"
                />

            <ImageButton
                android:id="@+id/guide_btn2"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/welcome"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/info" />

        </TableRow>

        <TableRow android:layout_height="48dp">

            <Button
                android:id="@+id/history_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:text="적립/사용 내역"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/guide_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:text="이용 안내"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/texlogo" />

    <TextView
        android:id="@+id/username_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line" />

    <View
        android:id="@+id/divider2"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:alpha="100"
        android:background="#646464"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/next_level_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="382dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:max="10000"
        android:progress="0"
        android:progressTint="#49A958"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_level_layout" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/qr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        app:backgroundTint="#90FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/barcode" />

    <LinearLayout
        android:id="@+id/background_layout"
        android:layout_width="402dp"
        android:layout_height="367dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menu_layout"
        app:layout_constraintStart_toStartOf="@+id/menu_layout"
        app:layout_constraintTop_toTopOf="@+id/menu_layout">

        <ImageView
            android:id="@+id/seoul_img"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:srcCompat="@drawable/bg" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
