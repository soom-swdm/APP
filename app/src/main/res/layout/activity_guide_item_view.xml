<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackgroundColor">

    <View
        android:id="@+id/container2_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_style"/>

    <TextView
        android:id="@+id/activity2_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="따릉이 대여"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/container2_view"
        app:layout_constraintTop_toTopOf="@id/container2_view"
        app:layout_constraintBottom_toBottomOf="@id/container2_view"
        app:layout_constraintRight_toLeftOf="@id/percent_txt"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/percent_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/activity2_txt"
        app:layout_constraintTop_toTopOf="@id/container2_view"
        app:layout_constraintBottom_toBottomOf="@id/container2_view"
        app:layout_constraintRight_toRightOf="@id/container2_view"
        android:gravity="center"
        />
</android.support.constraint.ConstraintLayout>