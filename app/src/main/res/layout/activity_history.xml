<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <View
        android:id="@+id/title_view"
        android:background="@color/colorPrimaryDark"
        android:layout_height="40dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/date_title_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/title_view"
        app:layout_constraintTop_toTopOf="@id/title_view"
        app:layout_constraintBottom_toBottomOf="@id/title_view"
        app:layout_constraintRight_toLeftOf="@id/method_title_txt"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/method_title_txt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="구분"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/date_title_txt"
        app:layout_constraintTop_toTopOf="@id/title_view"
        app:layout_constraintBottom_toBottomOf="@id/title_view"
        app:layout_constraintRight_toLeftOf="@id/mileage_title_txt"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/mileage_title_txt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="숨"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/method_title_txt"
        app:layout_constraintTop_toTopOf="@id/title_view"
        app:layout_constraintBottom_toBottomOf="@id/title_view"
        app:layout_constraintRight_toLeftOf="@+id/activity_txt"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/activity_title_txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="활동"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/mileage_title_txt"
        app:layout_constraintTop_toTopOf="@id/title_view"
        app:layout_constraintBottom_toBottomOf="@id/title_view"
        app:layout_constraintRight_toRightOf="@+id/title_view"
        android:gravity="center"
        />


